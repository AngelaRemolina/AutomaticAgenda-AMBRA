<head>
  <meta charset="UTF-8">
  <title>Agenda</title>
  <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/evo-calendar@1.1.3/evo-calendar/css/evo-calendar.min.css'>
  <link rel='stylesheet'
    href='https://cdn.jsdelivr.net/npm/evo-calendar@1.1.3/evo-calendar/css/evo-calendar.orange-coral.min.css'>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
  <div class="wrapper">
    <div class="row">
      <div class="col col-10">
        <div id="calendar"></div>
      </div>
      <div class="col">
        <h4 style="text-align: center;">Recommended Activities</h4>
        <div class="list-group">
          {{#each activities}}
          <a href="#" class="pb-2 list-group-item list-group-item-action flex-column align-items-start">
            <h5 class="mb-1">{{title}}</h5>
            <div class="gap-2 d-flex w-100 mb-2">
              <small>{{start_time}}</small>
              <small> - </small>
              <small>{{end_time}}</small>
            </div>
            <div class="d-inline p-1 bg-secondary text-white rounded" style="font-size: 0.75rem;">{{category}}</div>
          </a>
          {{/each}}
        </div>
      </div>
    </div>
  </div>

  <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js'></script>
  <script src='https://cdn.jsdelivr.net/npm/evo-calendar@1.1.3/evo-calendar/js/evo-calendar.min.js'></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  <script>
    var events = [];
  </script>
  {{#each events}}
  <script>
    events.push({
      id: '{{id}}',
      name: '{{title}}',
      description: '{{category}}' + ': ' + '{{description}}',
      date: new Date(), //todo: change to {{start_time}} when start_time is in the correct format (db fix needed) new Date("May 29, 2024 11:13:00");
      type: 'event',
    });
  </script>
  {{/each}}
  <script>
    $(document).ready(function () {
      $('#calendar').evoCalendar({
        todayHighlight: true,
        calendarEvents: events,
        theme: 'Orange Coral',
      });
    })
  </script>
</body>